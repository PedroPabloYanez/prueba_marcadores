<div class="card">
<div class="card-header d-flex justify-content-start">
  <div class="m-0">  
    <%= link_to new_marker_path, {remote: true, class: "btn btn-success text-left", id: "anadir-marker-btn"}  do %>
      <span class="fas fa-plus-square" ></span>
    <% end %>
  </div>
  <h1 class="h3 mx-5 text-gray-800 text-center">Markers</h1>
</div>
</div>

<table class="table border-primary"> 
  <thead>
    <tr>
      <th class="text-center">Name</th>
      <th class="text-center">Type</th>
      <th class="text-center">Category</th>
      <th class="text-center">Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @markers.each do |marker| %>
  
    <%= render 'markers/marker', marker: marker %>
    
  <% end %>
  
  </tbody>
</table>

<br>

<%= render 'modal_marker' %>
